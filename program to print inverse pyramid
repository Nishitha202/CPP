
#include <iostream>
using namespace std;

void inverse_pyramid(int n)
{
    // Outer loop to handle number of rows
    // n in this case
    for (int i = n; i > 0; i--) {

        // Inner loop to handle number of columns
        // values changing acc. to outer loop
        for (int j = 0; j <= n; j++) {

            if(j<=i)
            cout << "* ";
        }

  
        cout << endl;
    }
}

// Driver Function
int main()
{
    int n = 5;
    inverse_pyramid(n);
    return 0;
}
